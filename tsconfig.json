{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext", // Change to NodeNext
    "moduleResolution": "NodeNext", // Change to NodeNext
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "@blockingmachine/core": [
        "../../core/dist/index.js"
      ],
      "@blockingmachine/core/*": [
        "../../core/dist/*"
      ]
    },
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*"
  ]
}