{
  "name": "blockingmachine",
  "version": "1.0.0-beta.3",
  "description": "An application to generate filter lists for Adguard Home and more.",
  "license": "BSD-3-Clause",
  "main": ".build/main.cjs",
  "icon": "assets/Blockingmachine.icns",
  "scripts": {
    "clean": "rm -rf .build",
    "build": "npm run clean && node esbuild.config.cjs",
    "build:dev": "npm run clean && NODE_ENV=development node esbuild.config.cjs",
    "build:mac": "npm run build && electron-builder --config=electron-builder.yml --mac",
    "start": "npm run build:dev && electron ."
